{
  "manifest_version": 3,
  "name": "Sniffer",
  "version": "0.2.0",
  "description": "Sniff, record, and replay network requests",
  "permissions": ["webRequest", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icon.png",
      "48": "src/icon.png",
      "128": "src/icon.png"
    }
  },
  "icons": {
    "16": "src/icon.png",
    "48": "src/icon.png",
    "128": "src/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/intercept.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}
